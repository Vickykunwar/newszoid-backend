{
  "name": "newszoid-backend",
  "version": "1.0.1",
  "description": "Newszoid - Production-Ready News Platform Backend API",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required - Node.js backend ready for deployment'",
    "vercel-build": "echo 'Vercel build complete - Node.js backend ready'",
    "test": "jest --coverage --maxWorkers=2",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test-env": "node -e \"require('dotenv').config(); console.log('âœ… Environment loaded successfully'); process.exit(0);\"",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\"",
    "seed": "node scripts/seed.js",
    "migrate": "node scripts/migrate.js"
  },
  "keywords": [
    "news",
    "newszoid",
    "api",
    "backend",
    "express",
    "mongodb",
    "rest-api",
    "nodejs"
  ],
  "author": {
    "name": "Vicky Kunwar",
    "email": "vickykunwar555@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vickykunwar/newszoid-backend.git"
  },
  "bugs": {
    "url": "https://github.com/Vickykunwar/newszoid-backend/issues"
  },
  "homepage": "https://github.com/Vickykunwar/newszoid-backend#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.1.3",
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.0",
    "node-cache": "^5.1.2",
    "sanitize-html": "^2.13.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "@types/node": "^20.11.30"
  },
  "nodemonConfig": {
    "watch": [
      "server.js",
      "routes/**/*.js",
      "controllers/**/*.js",
      "models/**/*.js",
      "middleware/**/*.js",
      "utils/**/*.js"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/**",
      "test/**",
      "*.test.js",
      ".git/**"
    ],
    "exec": "node server.js",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!test/**"
    ],
    "testMatch": [
      "**/test/**/*.test.js",
      "**/__tests__/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/coverage/"
    ],
    "verbose": true,
    "forceExit": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true,
    "testTimeout": 30000
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  }
}